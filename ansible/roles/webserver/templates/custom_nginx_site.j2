server {
    listen 80;
    server_name {{ inventory_hostname }};

    root /var/www/html;
    index index.html;

    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl;
    server_name {{ inventory_hostname }};

    root /var/www/html;
    index index.html;

    ssl_certificate /etc/letsencrypt/live/dru-testing.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/dru-testing.com/privkey.pem;

    location / {
        try_files $uri $uri/ =404;
    }
}

